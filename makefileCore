
INCLUDE = -I./include ${PETSC_INCLUDE}

LIBS = ${PETSC_LIB}

EXEC = bin/testrsd

all : $(EXEC)

./src/%.o: ./src/%.$(CEXT)
	${MYCPP} -c $(INCLUDE) $< -o $@ $(MYCPPFLAGS) 
	
bin/testrsd : ./src/testrsd.o ./src/schurUtils.o
	${MYCPP} $^ -o $@ $(LIBS) $(MYCPPFLAGS) 

myclean :
	rm -rf ./src/*.o ./src/*~
	rm -rf $(EXEC)



