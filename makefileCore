
INCLUDE = -I./include ${PETSC_INCLUDE}

LIBS = ${PETSC_LIB}

EXEC = bin/testrsd

all : $(EXEC)

./src/%.o: ./src/%.$(CEXT)
	${MYCPP} -c $(MYCPPFLAGS) $(INCLUDE) $< -o $@ 
	
bin/testrsd : ./src/testrsd.o ./src/schurUtils.o
	${MYCPP} $(MYCPPFLAGS) $^ -o $@ $(LIBS)

myclean :
	rm -rf ./src/*.o ./src/*~
	rm -rf $(EXEC)



